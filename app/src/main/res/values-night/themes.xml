<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.SistemaETR" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/etr_black</item>
        <item name="colorOnPrimary">@color/etr_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/etr_red</item>
        <item name="colorOnSecondary">@color/etr_white</item>
        <!-- Accent color. -->
        <item name="android:colorBackground">@color/etr_background_dark</item>
        <item name="colorSurface">@color/etr_surface_dark</item>
        <!-- Background and surface colors. -->
        <item name="colorOnBackground">@color/etr_text_primary_dark</item>
        <item name="colorOnSurface">@color/etr_text_primary_dark</item>
        <item name="android:textColorSecondary">@color/etr_text_secondary_dark</item>
        <!-- Status bar colors. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Font and text size. -->
        <item name="android:fontFamily">@font/dotgothic16</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_alert_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/etr_black</item>
        <item name="colorOnSurface">@color/etr_black</item>
    </style>
</resources>